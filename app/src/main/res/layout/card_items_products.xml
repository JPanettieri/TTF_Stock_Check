<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardItemsProducts"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1">

    <TextView
        android:id="@+id/tvItemCodeCurrent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvItemDescriptionCurrent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="ItemCode" />

    <TextView
        android:id="@+id/tvItemDescriptionCurrent"
        android:layout_width="0dp"
        android:layout_height="42sp"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvItemCountCurrent"
        app:layout_constraintEnd_toStartOf="@+id/tvItemCountCurrent"
        app:layout_constraintStart_toEndOf="@+id/tvItemCodeCurrent"
        tools:text="ItemDescription" />

    <TextView
        android:id="@+id/tvItemCountCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="ItemCount" />


</androidx.constraintlayout.widget.ConstraintLayout>







